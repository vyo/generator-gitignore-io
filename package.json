{
  "name": "generator-gitignore-io",
  "version": "0.1.0",
  "description": "Creates .gitignore files via gitignore.io",
  "homepage": "https://github.com/vyo/generator-gitignore-io",
  "author": {
    "name": "Manuel Weidmann",
    "email": "weidmann.manuel@gmail.com",
    "url": "https://github.com/vyo"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "git",
    "yeoman-generator"
  ],
  "devDependencies": {
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "coveralls": "^3.0.0",
    "nsp": "^2.8.0",
    "eslint": "^4.19.1",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-xo": "^0.20.1",
    "jest": "^22.0.6"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "chalk": "^2.1.0",
    "cli-spinner": "^0.2.8",
    "fuzzy-search": "^2.0.1",
    "inquirer-checkbox-plus-prompt": "^1.0.1",
    "request": "^2.85.0",
    "request-promise": "^4.2.2",
    "yeoman-generator": "^2.0.1",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepublishOnly": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "vyo/generator-gitignore-io",
  "license": "MIT"
}
